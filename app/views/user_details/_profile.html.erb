
<div class="wrapper">
 <div class="content">

   <div class="contentLeft">
			
        <div class="doctorImage">
          <% unless current_user.image_url.nil? %>
          <%= image_tag current_user.image_url, width: 225, height: 225 %>
          <% else %>
          <%= image_tag "profile-image.png", width: 225, height: 225 %>
          <% end %>
					<!-- <img src="assets/images/doctor.png" width="100%" alt="" /> -->
				</div>
        
				<div class="doctorImageHead">
          <% if current_user.user_detail.first_name == nil %>
            Username need to be updated
          <% else %>
          <%= current_user.user_detail.first_name %>
          <% end %>
				</div>
        
				<div class="doctorImageText">
          <% if current_user.user_detail.date_of_birth != nil %>
             <% dob = current_user.user_detail.date_of_birth.strftime("%Y").to_i %>
             <% today = Date.today.strftime("%Y").to_i %>
             <% age = today - dob %>
             <%= age %> Years,  <%= current_user.user_detail.gender %>
					   <%= image_tag "doctorEdit.png" %>
          <% end %>
        </div>
        
				<hr />
				
        <div class="bloodDoctor">
					
           <div class="bloodDoctorLeft">
             <%= image_tag "blood.png" %>
           </div>
          
			  		<div class="bloodDoctorRight">
              <% if current_user.user_detail.blood_group != nil %>
              BLOOD GROUP: <%= current_user.user_detail.blood_group %>
              <% end %>
					  </div>
					 <div class="clearfix"></div>
          
				</div><!-- blooddoctor ends here -->
				
        <div class="bloodDoctor">
				
           <div class="bloodDoctorLeft">
             <%= image_tag "height.png" %>
           </div>
				
           <div class="bloodDoctorRight">
             <% if current_user.user_detail.height != nil %>
    					 	HEIGHT: <%= current_user.user_detail.height %>
             <% end %>
					 </div>
					
           <div class="clearfix"></div>
				</div><!-- blood doctor ends here -->
				
        <div class="bloodDoctor">
				
           <div class="bloodDoctorLeft">
             <%= image_tag "weight.png" %>
           </div>
					
           <div class="bloodDoctorRight">
             <% if current_user.user_detail.weight != nil %> 
               WEIGHT: <%= current_user.user_detail.weight %>
             <% end %>
					 </div>
					
           <div class="clearfix"></div>
				</div><!-- blooddoctor ends here -->
				<hr />

				<div class="bloodDoctorBottom">
				  	<div class="bloodDoctorLeftBottom">
              <%= image_tag "aboutMe.png" %>
            </div>
					
            <div class="bloodDoctorRightBottom">
              <%= link_to "ABOUT ME", user_detail_path(current_user.user_detail), "data-ajax" => "false" %>
					  </div>
					
            <div class="clearfix"></div>
				</div><!-- blooddoctor bottom ends here -->
				
        <div class="bloodDoctorBottom">
				
           <div class="bloodDoctorLeftBottom">
             <%= image_tag "myHealth.png" %>
           </div>
				
           <div class="bloodDoctorRightBottom">
				 		MY HEALTH
             
              <div class="clearfix"></div>
					   
             <div class="bloodDoctorRightBottomInner">
					     <div class="bloodDoctorRightBottomInnerImage">+</div>
							 <div class="bloodDoctorRightBottomInnertext">
                 <%= link_to "Doctor Visits", doctor_visits_path, "data-ajax" => "false" %>
               </div>
							 <div class="clearfix"></div>
						 </div><!-- bloodDoctorRightBottomInner -->
             
             <div class="bloodDoctorRightBottomInner">
					     <div class="bloodDoctorRightBottomInnerImage">+</div>
							 <div class="bloodDoctorRightBottomInnertext">
                 <%= link_to "Health Records", health_records_path, "data-ajax" => "false" %>
               </div>
							 <div class="clearfix"></div>
						 </div><!-- bloodDoctorRightBottomInner -->
             
				   </div>
					
           <div class="clearfix"></div>
				</div><!-- blood doctor bottom ends here -->
				
        <div class="bloodDoctorBottom">
				
           <div class="bloodDoctorLeftBottom">
             <%= image_tag "myFamily.png" %>
           </div>
				
           <div class="bloodDoctorRightBottom">
             <%= link_to "MY FAMILY", family_members_path(current_user.family_members), "data-ajax" => 'false' %>
             
             <div class="clearfix"></div>
					   
             <div class="bloodDoctorRightBottomInner">
					       <% family = current_user.family_members %>
                 <% family.each do |member| %>
                   <ul style="list-style-type:none;">
                     <li><%= link_to member.relation, doctor_visits_doctor_visit_member_path(:id => member.id), "data-ajax" => "false" %></li>
                   </ul>
                 <% end %>
               &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; <%= link_to " +  Add Member", new_family_member_path, "data-ajax" => "false" %>
             </div>
          
          <div class="clearfix"></div>
				</div><!-- blood doctor bottom ends here -->
				
        <div class="bloodDoctorBottom">
					<div class="bloodDoctorLeftBottom">
            <%= image_tag "myPhrama.png" %>
           </div>
				
          <div class="bloodDoctorRightBottom">
						MY PHARMA
					</div>
					
          <div class="clearfix"></div>
				</div><!-- blood dctor bottom ends here -->
			</div> <!-- content left ends here -->
  </div><!-- content ends here -->
</div> <!-- wrapper ends here -->