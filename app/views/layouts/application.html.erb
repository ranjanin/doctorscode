<!DOCTYPE html>
<html>
<head>
  <title>Doctor's Code - Take control of your Health </title> 
 <!-- <title>VatonWheels</title>  -->
  
  
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css' />
  <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />

  
</head>
<body>

 
 <!-- <div data-role="page" id="home" data-url="<%= request.path %>"> -->
 <% if user_signed_in? %>
 <!--  <div data-role="page" id="home" data-url="<%= request.path %>">-->
   <div class="wrapper">
    <div class="container header headerBG">
 		    
        <div class="logo">
  				<a href="/" data-ajax="false">
	  		    <%= image_tag "logoInside.png" %>
          </a>
			  </div>
      
        <div class="menuIconWrap">
				  <div class="menuIcon">
				    <span id="menuBG1" class="menuIconBG menuBG1"></span>
				    <span id="menuBG2" class="menuIconBG menuBG2"></span>
				    <span id="menuBG3" class="menuIconBG menuBG3"></span>
				  </div>
			 </div>
          
			 <div class="menu">
				<ul>
          <% if current_user.user_detail.present? %>
             <li>
                <%= link_to edit_user_detail_path(current_user.user_detail), "data-ajax" => "false" do %>
                    <i class="fa fa-user"></i> 
                    &nbsp;&nbsp;My Profile
                <% end %>
             </li>
          <% end %>
                        
          <% if current_user.user_detail.present? %>
            <li>
               <%= link_to users_user_profile_picture_path, "data-ajax" => "false" do %>
                   <i class="fa fa-user"></i> 
                   &nbsp;&nbsp;Upload Profile Picture
               <% end %>
            </li>
          <% end %>
          
          <li>
            <%= link_to destroy_user_session_path, "data-ajax" => "false" do %>
                <i class="fa fa-sign-out"></i> 
                &nbsp;&nbsp;Logout
            <% end %>
          </li>
		    </ul>
			 </div><!-- menu ends here -->        
      
       <% if false %><
        div class="navbar-collapse collapse">
             
          <ul class="nav pull-right">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown">
                 <% unless current_user.image_url.nil? %>
                     <%= image_tag current_user.image_url, width: 40, height: 40 %>
                 <% else %>
                     <%= image_tag "profile-image.png", width: 40, heigth: 40 %>
                 <% end %>
                 <span class="caret"></span> 
              </a>
              <ul class="dropdown-menu">
                <% if current_user.user_detail.present? %>
                   <li>
                      <%= link_to edit_user_detail_path(current_user.user_detail), "data-ajax" => "false" do %>
                        <i class="fa fa-user"></i> 
                        &nbsp;&nbsp;My Profile
                      <% end %>
                   </li>
                <% end %>
                        
                <% if current_user.user_detail.present? %>
                  <li>
                   <%= link_to users_user_profile_picture_path, "data-ajax" => "false" do %>
                          <i class="fa fa-user"></i> 
                          &nbsp;&nbsp;Upload Profile Picture
                   <% end %>
                  </li>
                     
                  <li class="divider"></li>
                <% end %>
                <li>
                  <%= link_to destroy_user_session_path, :method => "get" , "data-ajax" => "false" do %>
                       <i class="fa fa-sign-out"></i> 
                       &nbsp;&nbsp;Logout
                  <% end %>
                </li>
              </ul><!-- drop down menu ends here -->
            </li><!-- dropdown ends here -->
          </ul><!-- nav pull right ends here -->
        </div><!-- navbar collapse ends here -->
       <% end %>
    </div><!-- container header headerBG ends here -->
   </div><!-- wrapper ends here -->
 <% end %>
 <%= yield %>  
 </body>
</html>
