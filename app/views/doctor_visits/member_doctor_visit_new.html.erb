<%= render 'user_details/profile' %>

<div class="contentRight">
			
        <div class="contentRightTop">
          You are here - <%= image_tag "homeDark.png", width: "21" %>
				</div>
  
				<div class="contentRightBottom">
          
					<div class="contentRightBottomtextNew">
						A family medical history is a record of health information about a person and his or her close relatives A family medical history is a record of health information about a person and his or her close relatives
					</div>
          
					 <%= form_for @doctor_visit, :url => '/doctor_visits/member_doctor_visit_create', :html => {:"data-ajax" => "false"} do |f| %>
						
          <div class="contentRightBottomLeft">
					
            <div class="contentRightBottomHead">
							Add doctor visits for Family Member
						</div>					

						<div class="contentRightBottomHeadLeft textTransformCapitalize">Relationship  </div>
							<div class="contentRightBottomHeadRight textTransformUppercase">
								<%= f.collection_select :family_member_id, FamilyMember.where(:user_id => current_user.id), :id, :relation, {:prompt => "Select Member"}  %>
							</div>
            
							<div class="clearfix"></div>
							<div class="contentRightBottomHeadLeft textTransformCapitalize">Date of Visit</div>
							<div class="contentRightBottomHeadRight textTransformUppercase"> 
                <%= f.text_field :date_of_visit, :id => "datepicker" %>
							</div>
            
							<div class="clearfix"></div>
							<div class="contentRightBottomHeadLeft textTransformCapitalize">Doctor</div>
							<div class="contentRightBottomHeadRight textTransformUppercase">
								<%= f.text_field :doctor %>
							</div>
            
							<div class="clearfix"></div>
							<div class="contentRightBottomHeadLeft textTransformCapitalize">Hospital</div>
							<div class="contentRightBottomHeadRight textTransformUppercase">
								<%= f.text_field :hospital %>
							</div>
            
							<div class="clearfix"></div>
							<div class="contentRightBottomHeadLeft textTransformCapitalize">Reason For Visit</div>
							<div class="contentRightBottomHeadRight textTransformUppercase">
								<%= f.text_field :reason_for_visit %>
							</div>
            
							<div class="clearfix"></div>
							<div class="contentRightBottomHeadLeft textTransformCapitalize">Details</div>
							<div class="contentRightBottomHeadRight textTransformUppercase">
								<%= f.text_field :details %>
							</div>
            
								<div class="clearfix"></div>
						      <%= f.submit "SUBMIT" %>
								<div class="clearfix"></div>
            
							</div><!-- contentRightBottomLeft ends here -->
          <% end %>
						</div><!-- contentRightBottom ends here -->
</div><!-- contentright ends here -->


